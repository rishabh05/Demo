<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_task_status_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size20"
        android:layout_marginBottom="@dimen/size20"
        android:layout_marginLeft="@dimen/dim_padding10"
        android:layout_marginRight="@dimen/dim_padding10"
        android:background="@drawable/rounded_rectangle_shape">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/bizchat_logo"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:id="@+id/contaier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:hint="@string/CommonEmail"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:textColor="@color/black">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edPasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edEmail"
                android:hint="@string/CommonPassword"
                android:imeOptions="actionDone"
                android:inputType="textPassword|textNoSuggestions"></EditText>


            <TextView
                android:id="@+id/tvForgetPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edOldPassword"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/edOldPassword"
                android:layout_marginTop="@dimen/dim_padding_5dp"
                android:gravity="center"
                android:padding="@dimen/dim_padding_5dp"
                android:text="@string/PFCommonForgotPassword"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_leftpanel_default_textsize_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contaier"
            android:layout_marginTop="@dimen/size40"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_btn_drawable_white"
                android:text="@string/PFCommonLogin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_leftpanel_default_textsize_large" />

            <TextView
                android:id="@+id/tvOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edOldPassword"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/edOldPassword"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/dim_padding15"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dim_leftpanel_default_textsize_large"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


    <com.eworkplaceapps.ed.view.ProgressWheel
        android:id="@+id/loading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/lightGrey"
        wheel:matProg_progressIndeterminate="true" />
</RelativeLayout>
